@model List<Product>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<style>
    .mavi {
        color: blue;
    }
</style>


<div class="container">
    <div class="row">
        <div class="col-md-6">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Ürün İsmi</th>
                        <th>Ürün Fiyatı</th>
                        <th>Ürün Kategorisi</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (Product item in Model)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.UnitPrice</td>
                            @if (item.Category == null)
                            {
                                <td>Kategorisi Yok</td>
                            }
                            else
                            {
                                <td> @item.Category.CategoryName</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>